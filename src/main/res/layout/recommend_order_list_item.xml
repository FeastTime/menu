<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/recommend_order_list_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/very_big_text_size"
            />

        <TextView
            android:id="@+id/recommend_order_list_item_specal_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/big_text_size"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/recommend_order_list_item_dishes_img_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/recommend_order_list_item_reduce_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/reduce"
            />

        <TextView
            android:id="@+id/recommend_order_list_item_dishes_count_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0å…ƒ"
            android:textSize="@dimen/big_text_size"
            android:textColor="@color/white"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <ImageView
            android:id="@+id/recommend_order_list_item_add_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/add"
            />
    </LinearLayout>

</LinearLayout>