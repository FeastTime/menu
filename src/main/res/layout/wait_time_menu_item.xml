<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52px"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="170px"
        android:text="宫保鸡丁"
        android:textColor="@color/text_color_gray"
        android:textSize="@dimen/very_big_text_size"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/is_cooking"
        android:layout_width="85px"
        android:src="@mipmap/waittime_cooking"
        android:layout_height="52px" />

    <LinearLayout
        android:layout_width="350px"
        android:layout_height="52px"
        android:layout_marginLeft="30px"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/waittime_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="上菜倒计时 25分钟"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/normal_text_size"
            />

        <ProgressBar
            android:id="@+id/waittime_progress_bar"
            android:layout_marginTop="5px"
            style="@style/StyleWaitTimeProgressBar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_progressbar_bg"
            android:max="100"
            android:progress="50" />

    </LinearLayout>

</LinearLayout>
