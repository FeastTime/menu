<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_activity_bg"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="457dp"
        android:layout_height="312dp"
        android:background="@drawable/login_info_bg_shape"
        >
        <ImageView
            android:id="@+id/login_activity_hat_icon_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/chef_hat"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
         />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:gravity="center_horizontal"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机快捷登录"
                android:textColor="@color/orange_color"
                android:textSize="@dimen/big_text_size" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >

                <EditText
                    android:id="@+id/login_activity_phone_et"
                    android:layout_width="270dp"
                    android:layout_height="44dp"
                    android:hint="请输入手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:textColor="@color/dark_gray"
                    android:background="@drawable/login_text_field_bg"
                    android:textColorHint="@color/small_gray"
                    android:textSize="@dimen/big_text_size"
                    android:gravity="center"
                    />


                <RelativeLayout
                    android:layout_width="270dp"
                    android:layout_height="44dp"
                    android:layout_below="@+id/login_activity_phone_et"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/login_activity_verify_num_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/login_text_field_bg"
                        android:hint="请输入验证码"
                        android:textSize="@dimen/big_text_size"
                        android:gravity="center"
                        android:maxLength="6"
                        android:textColor="@color/dark_gray"
                        android:textColorHint="@color/small_gray"
                        android:inputType="number"
                        />

                    <TextView
                        android:id="@+id/login_activity_get_verify_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获取验证码"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/normal_text_size"
                        android:background="@drawable/login_get_verify_code_bg"
                        android:layout_marginRight="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>




            </RelativeLayout>


            <Button
                android:id="@+id/login_activity_login_btn"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:textSize="@dimen/very_big_text_size"
                android:textColor="@color/white"
                android:text="登录"
                android:background="@drawable/login_btn_shape"
                android:layout_marginTop="20dp"

                />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>